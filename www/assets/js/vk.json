{
    "HintPan" : {
        "Label" : {
            "font"   : { "$zebra.ui.Font" : [ "Arial", "bold",  28] },
            "color"  : "#2222FF"
        },

        "border"    : { "$zebra.ui.Border": [ "#CCCCCC", 1, 16 ] },
        "padding"   : 12,
        "background": "white",
        "layout"    : { "$zebra.layout.FlowLayout" : [ "center", "top"] }
    },

    "VKeyBase" : {
    	"Label" : {
    		"$zebra.ui.Label": [],
    		"font": {"$zebra.ui.Font": ["Arial", "bold", 14] }
    	 }
    },

    "VKey" : {
        "Label" : {
            "color": "white"
        },

        "border" : {
            "out" : { "$zebra.ui.Border": [ "white", 1, 6] },
            "pressed.over" : { "$zebra.ui.Border" : [ "orange", 1, 6] }
        },

        "background" : {
            "out"  :"black",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VKeyOption" : {
        "background" : {
            "out" :"#dF4422",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VKeys" : {
    	"KeysPopupPan" : {
    		"border" : { "$zebra.ui.Border" : [ "orange", 10, 10] },
    		"layout" : { "$zebra.layout.GridLayout" : [ 6, 4 ] }
    	},

        "SmallLabel" : {
            "color": "orange"
        },

        "background" : {
            "out" :"gray",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VK" : {
        "groups":  {
            "latin":[
                [ "1!", "2@", "3#", "4$", "5%", "6^", "7&", "8*", "9(", "0)", "-_", "=+" ],
                [ "q", "w", "e", "r", "t",  "y", "u", "i", "o", "p", "[{", "]}" ],
                [ "a", "s", "d", "f", "g", "h", "j", "k", "l", ";:", "'", "enter"  ],
                [ "shift", "z", "x", "c", "v", "b", "n", "m", ",<", ".>", "/?", "shift" ],
                [ "space",  "backSpace", "del" ]
            ]
        },
        "activeGroup" : "latin",
        "background"  : "lightGray",
        "padding"     : 4,
        "layout"      : { "$zebra.layout.StackLayout": null }
    }
}